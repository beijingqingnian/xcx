.board {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FBF9FE;
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
}
.board-info {
  display: flex;
  padding: 40rpx;
  align-items: center;
  flex-direction: row;
}
.board-name {
  flex: 1;
}
.board-tip{
  font-size: 25rpx;
}
.board-tip-info{
  display: flex;
  padding:0rpx 0rpx 40rpx 40rpx;
  align-items: center;
  flex-direction: row;
}
.board-img {
  width: 32rpx;
  height: 32rpx;
}