.container {
  display: flex;
  flex: 1;
  flex-direction: column;
  min-height: 100%;
  font-size: 32rpx;
}
.head {
  line-height: 1;
}
.body {
  padding-left: 30rpx;
  padding-right: 30rpx;
  flex: 1;
  overflow: auto;
}
.swiper {
  height: 400rpx;
  width: 100%;
}
.swiper image {
  height: 100%;
  width: 100%;
}
.header {
  padding: 40rpx 80rpx 20rpx;
}
.title {
  display: block;
  font-size: 50rpx;
}
.description {
  display: block;
  margin-top: 30rpx;
  color: #888;
  font-size: 28rpx;
}

.board {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: #FBF9FE;
  overflow: hidden;
  border-radius: 4rpx;
  cursor: pointer;
}
.board-info {
  display: flex;
  padding: 40rpx;
  align-items: center;
  flex-direction: row;
}
.board-name {
  flex: 1;
}
.board-tip{
  font-size: 25rpx;
}
.board-tip-info{
  display: flex;
  padding:0rpx 0rpx 40rpx 40rpx;
  align-items: center;
  flex-direction: row;
}
.board-img {
  width: 32rpx;
  height: 32rpx;
}
.nav{
  background-color: #3e4259;
}
.add_img{
  width:48rpx;
  height:48rpx;
  margin:20rpx;
}
.nav_type{
  float:right;
}
.nav_text{
  color:#fff;
  margin:25px 0 20rpx 25rpx;
  font-size: 24rpx;
  line-height: 50px;
}